<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".fragments.SortByFragment">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_coordinator_option"
        android:background="@color/white">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/margin_medium_3">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_medium_3"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:text="Sort by"
                    android:textSize="@dimen/text_heading_1x" />

            </RelativeLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <RadioGroup
            android:id="@+id/radioGpViewAs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_medium_3"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

            <RadioButton
                android:id="@+id/radioBtnRecent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recently opened" />

            <RadioButton
                android:id="@+id/radioBtnTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title" />

            <RadioButton
                android:id="@+id/radioBtnAuthor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Author" />

        </RadioGroup>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</RelativeLayout>