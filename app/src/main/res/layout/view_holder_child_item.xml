<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/margin_medium_2">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivInnerGenreBooks"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/book_img2"
        android:scaleType="centerCrop"
        app:shapeAppearanceOverlay="@style/roundedImageView"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvBooksName"
        android:layout_below="@id/ivInnerGenreBooks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/txt_book_name"
        android:textSize="@dimen/text_regular_2x"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvAuthorName"
        android:layout_below="@id/tvBooksName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/txt_author_name"
        android:textSize="@dimen/text_regular_2x"/>

</RelativeLayout>