<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".activities.TestingViewAsActivity">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_coordinator_option">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/margin_medium_3">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_medium_3"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:text="View as"
                    android:textSize="@dimen/text_heading_1x" />

            </RelativeLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <RadioGroup
            android:id="@+id/radioGpViewAs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_medium_3"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

            <RadioButton
                android:id="@+id/radioBtnList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onRadioBtnList"
                android:text="List"/>

            <RadioButton
                android:id="@+id/radioBtnLargeGrid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onRadioBtnLargeGrid"
                android:text="Large grid" />

            <RadioButton
                android:id="@+id/radioBtnSmallGrid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onRadioBtnSmallGrid"
                android:text="Small grid" />

        </RadioGroup>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</RelativeLayout>