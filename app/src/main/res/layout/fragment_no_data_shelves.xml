<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.NoDataShelvesFragment">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:src="@drawable/no_shelves"
        android:layout_above="@id/txtNoShelves"
        android:layout_centerInParent="true"
        android:scaleType="centerCrop"
        android:layout_marginBottom="@dimen/margin_medium_2"/>

    <TextView
        android:id="@+id/txtNoShelves"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No shelves"
        android:layout_centerInParent="true"
        android:textSize="@dimen/text_heading_1x"
        android:textColor="@android:color/black"/>

    <TextView
        android:layout_below="@id/txtNoShelves"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_centerInParent="true"
        android:text="@string/text_no_shelves"
        android:textSize="@dimen/text_regular_2x"
        android:textColor="@android:color/black"/>

</RelativeLayout>